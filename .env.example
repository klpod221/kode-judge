# Sandbox execution limits
SANDBOX_CPU_TIME_LIMIT=2.0              # seconds
SANDBOX_CPU_EXTRA_TIME=0.5              # seconds
SANDBOX_WALL_TIME_LIMIT=5.0             # seconds
SANDBOX_MEMORY_LIMIT=128000             # KB (128MB)
SANDBOX_MAX_PROCESSES=128               # max processes/threads
SANDBOX_MAX_FILE_SIZE=10240             # KB (10MB)
SANDBOX_NUMBER_OF_RUNS=1                # default runs

# Sandbox boolean flags
SANDBOX_ENABLE_PER_PROCESS_TIME_LIMIT=false
SANDBOX_ENABLE_PER_PROCESS_MEMORY_LIMIT=false
SANDBOX_REDIRECT_STDERR_TO_STDOUT=false
SANDBOX_ENABLE_NETWORK=false
